<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/centerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/center" />

    <View
        android:id="@+id/topButton"
        android:layout_width="24dp"
        android:layout_height="100dp"
        android:layout_above="@id/centerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_orange_dark" />

    <View
        android:id="@+id/leftButton"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@id/centerButton"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@android:color/holo_red_dark" />
    <View
        android:id="@+id/rightButton"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@id/centerButton"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark" />
    <View
        android:id="@+id/bottomButton"
        android:layout_width="24dp"
        android:layout_height="100dp"
        android:layout_below="@id/centerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark" />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/topButton"
        android:layout_alignStart="@id/leftButton"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_purple" />
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/bottomButton"
        android:layout_alignStart="@id/rightButton"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_purple" />
</RelativeLayout>